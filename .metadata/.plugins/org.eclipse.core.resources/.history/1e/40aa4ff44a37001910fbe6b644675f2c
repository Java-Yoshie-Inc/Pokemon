package de.yoshie2000.pokemon.map;

import org.newdawn.slick.tiled.TiledMap;

import de.yoshie2000.pokemon.Dialogue;
import de.yoshie2000.pokemon.engine.Game;
import de.yoshie2000.pokemon.maths.Vector;

public class Map {

	private TiledMap map;
	private MapData data;
	private String name;
	
	@Override
	public String toString() {
		return "Map[" + name + "]";
	}

	public Map(String name) {
		try {
			this.name = name;
			map = new TiledMap("res/" + name + ".tmx");
			data = new MapData(name, map.getWidth(), map.getHeight());
			Game.addMap(this);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	public boolean checkTile(Vector from, Vector to) {
		try {
			String colData = getData().getCollisionData()[(int) to.x / Game.getGridSize()][(int) to.y
					/ Game.getGridSize()];
			
			// DIALOGUE
			if (data.getDialogues().containsKey(colData) && from.isBelow(to)) {
				Dialogue.startDialogue(data.getDialogues().get(colData));
			}
			
			// MAP SWITCH
			if (data.getMapSwitches().containsKey(colData)) {
				System.out.println(data.getMapSwitches().get(colData));
			}
			
			if (!colData.equals("0")) {
				return false;
			}
		} catch (Exception e) {
			return false;
		}
		return true;
	}

	public TiledMap getMap() {
		return map;
	}

	public MapData getData() {
		return data;
	}
	
	public String getName() {
		return name;
	}

}
